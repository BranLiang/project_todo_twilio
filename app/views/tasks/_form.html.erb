<%= form_for task do |f| %>
  <%= f.label :title, 'Title' %><br />
  <%= f.text_field :title %> <br />
  <%= f.label :description, 'Body' %><br />
  <%= f.text_area  :description %><br />
  <%= f.datetime_select :due_date %><br />
  <%= f.label :priority %><br />
  <%= f.select :priority, (0..5) %><br />
  <%= f.submit %>
<% end %>
